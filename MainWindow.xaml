<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Sheltered2SaveGameEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.Resources>
            <Thickness x:Key="NavigationViewContentMargin">0,48,0,0</Thickness>
            <Thickness x:Key="NavigationViewMinimalContentMargin">0,48,0,0</Thickness>
            <Thickness x:Key="NavigationViewContentGridBorderThickness">1,1,0,0</Thickness>
            <CornerRadius x:Key="NavigationViewContentGridCornerRadius">8,0,0,0</CornerRadius>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Custom title bar -->
        <Border Grid.Column="1"
                Height="{x:Bind NavigationViewControl.CompactPaneLength, Mode=OneWay}"
                Margin="48,0,0,0"
                VerticalAlignment="Stretch">
                <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
                    <Image
                        Source="{StaticResource AppIcon}"
                        VerticalAlignment="Center"
                        Width="18" />
                    <TextBlock
                        Margin="12,0,0,0"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{StaticResource AppTitle}"
                        VerticalAlignment="Center" />
                </StackPanel>
            </Border>
        <!-- Main navigation view -->
        <NavigationView x:Name="NavigationViewControl"
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        IsTabStop="False"
                        IsTitleBarAutoPaddingEnabled="True"
                        SelectionChanged="OnNavigationViewSelectionChanged"
                        IsBackEnabled="{x:Bind RootFrame.CanGoBack, Mode=OneWay}">

            <NavigationView.Resources>
                <Thickness x:Key="NavigationViewContentMargin">0,48,0,0</Thickness>
                <Thickness x:Key="NavigationViewMinimalContentMargin">0,48,0,0</Thickness>
                <Thickness x:Key="NavigationViewContentGridBorderThickness">1,1,0,0</Thickness>
                <CornerRadius x:Key="NavigationViewContentGridCornerRadius">8,0,0,0</CornerRadius>
            </NavigationView.Resources>

            <ScrollView>
                <Frame x:Name="RootFrame" NavigationFailed="OnNavigationFailed">
                    <Frame.ContentTransitions>
                        <TransitionCollection>
                            <NavigationThemeTransition/>
                        </TransitionCollection>
                    </Frame.ContentTransitions>
                </Frame>
            </ScrollView>

            <!-- Main navigation menu items -->
            <NavigationView.MenuItems>
                <NavigationViewItem Tag="Home" 
                                    Content="Home"
                                    Icon="Home" />
                <NavigationViewItemSeparator />
                <NavigationViewItem Tag="Characters"
                                    Content="Characters" 
                                    Icon="People" />
                <NavigationViewItem Tag="Pets"
                                    Content="Pets" 
                                    Icon="Emoji" />
                <NavigationViewItem Tag="Inventory"
                                    Content="Inventory" 
                                    Icon="Shop" />
                <NavigationViewItem Tag="Crafting"
                                    Content="Crafting"
                                    Icon="Repair" />
                <NavigationViewItem Tag="Factions"
                                    Content="Factions" 
                                    Icon="Flag" />
            </NavigationView.MenuItems>

            <!-- Footer navigation items -->
            <NavigationView.FooterMenuItems>
                <NavigationViewItem Tag="Donate"
                                    Content="Donate">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEB52;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>
        </NavigationView>
    </Grid>
</Window>