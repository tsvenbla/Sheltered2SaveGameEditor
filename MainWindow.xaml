<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Sheltered2SaveGameEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Sheltered 2 - Save Game Editor">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.Resources>
            <!-- Navigation view styling -->
            <Thickness x:Key="NavigationViewContentMargin">0,48,0,0</Thickness>
            <Thickness x:Key="NavigationViewMinimalContentMargin">0,48,0,0</Thickness>
            <Thickness x:Key="NavigationViewContentGridBorderThickness">1,1,0,0</Thickness>
            <CornerRadius x:Key="NavigationViewContentGridCornerRadius">8,0,0,0</CornerRadius>

            <!-- App bar styling -->
            <Style x:Key="AppTitleBarStyle" TargetType="StackPanel">
                <Setter Property="Orientation" Value="Horizontal" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="48,0,0,0" />
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom title bar -->
        <Border Grid.Row="0" Height="48">
            <StackPanel Style="{StaticResource AppTitleBarStyle}">
                <Image Source="/Assets/AppIcon.ico"
                       VerticalAlignment="Center"
                       Width="16" Height="16"
                       Margin="8,0,4,0"/>
                <TextBlock Text="{StaticResource AppTitleName}"
                           Margin="12,0,0,0" 
                           VerticalAlignment="Center"
                           Style="{StaticResource CaptionTextBlockStyle}"/>
            </StackPanel>
        </Border>
        <!-- Main navigation view -->
        <NavigationView Grid.Row="1"
                        IsBackEnabled="True"
                        PaneDisplayMode="Auto">

            <!--SelectionChanged="OnNavigationViewSelectionChanged" 
                        BackRequested="OnNavigationViewBackRequested"
                        IsBackEnabled="{x:Bind ViewModel.IsNavigateBackEnabled, Mode=OneWay}"-->

            <NavigationView.Resources>
                <Thickness x:Key="NavigationViewContentMargin">0,48,0,0</Thickness>
                <Thickness x:Key="NavigationViewMinimalContentMargin">0,48,0,0</Thickness>
                <Thickness x:Key="NavigationViewContentGridBorderThickness">1,1,0,0</Thickness>
                <CornerRadius x:Key="NavigationViewContentGridCornerRadius">8,0,0,0</CornerRadius>
            </NavigationView.Resources>

            <ScrollView>
                <Frame>
                    <Frame.ContentTransitions>
                        <TransitionCollection>
                            <NavigationThemeTransition/>
                        </TransitionCollection>
                    </Frame.ContentTransitions>
                </Frame>
            </ScrollView>

            <!-- Main navigation menu items -->
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Home" 
                                    Tag="Home" 
                                    Icon="Home" />
                <NavigationViewItemSeparator />
                <NavigationViewItem Content="Characters" 
                                    Tag="Characters" 
                                    Icon="People" />
                <NavigationViewItem Content="Pets" 
                                    Tag="Pets" 
                                    Icon="Emoji" />
                <NavigationViewItem Content="Inventory" 
                                    Tag="Inventory" 
                                    Icon="Shop" />
                <NavigationViewItem Content="Crafting" 
                                    Tag="Crafting" 
                                    Icon="Repair" />
                <NavigationViewItem Content="Factions" 
                                    Tag="Factions" 
                                    Icon="Flag" />
            </NavigationView.MenuItems>

            <!-- Footer navigation items -->
            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="Donate" 
                                    Tag="Donate">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEB52;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>
        </NavigationView>
    </Grid>
</Window>